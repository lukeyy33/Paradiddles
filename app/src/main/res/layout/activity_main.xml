<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.lukewaugh.paradiddles.MainActivity"
    android:id="@+id/drawerLayout">
      <!-- Frame Layout -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainDrawerContent"
            android:contentDescription="@string/drawerFrameLayoutDescription">
        </FrameLayout>

        <!-- Generated Items in List View -->
        <ListView
            android:id="@+id/drawerList"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:contentDescription="@string/drawerListItemsContent">
        </ListView>

    <include layout="@layout/content_main" />
</android.support.v4.widget.DrawerLayout>
